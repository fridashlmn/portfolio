{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "types": [
      "@types/node",
      "nuxt-windicss",
      "@nuxt/image-edge"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
